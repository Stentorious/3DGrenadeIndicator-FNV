<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
	<moduleName>3D Grenade Indicator</moduleName>
	<requiredInstallFiles>
		<folder source="Required" destination="" />
	</requiredInstallFiles>
	<installSteps order="Explicit">
		<installStep name="3D Grenade Indicator">
			<optionalFileGroups order="Explicit">
				<group name="Main Files" type="SelectExactlyOne">
					<plugins order="Explicit">
						<plugin name="Plugin">
							<description>Select if you want 3D Grenade Indicator in plugin form. (ESP)</description>
							<files>
								<folder source="Main\Plugin" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Scriptrunner">
							<description>Select if you want 3D Grenade Indicator in scriptrunner form. (ESPless)</description>
							<files>
								<folder source="Main\Scriptrunner" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
				<group name="Optional Files" type="SelectAny">
					<plugins order="Explicit">
						<plugin name="Disable Vanilla Indicator">
							<description>Select if you want to disable the vanilla grenade indicator. (Requires lStewieAl's Tweaks)</description>
							<files>
								<folder source="Optional\Disable Vanilla Indicator" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Recommended"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
			</optionalFileGroups>
		</installStep>
	</installSteps>
</config>